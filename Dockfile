# === 阶段一：构建 (Node) ===
FROM node:16-alpine as builder
WORKDIR /app
COPY package*.json ./
# 此时还在 GitHub 服务器上，网络很好，不用淘宝源也行
RUN npm install
COPY . .
# 这一步会在 GitHub 的 7GB 内存机器上跑，绝对不会崩
RUN npm run build

# === 阶段二：服务 (Nginx) ===
FROM nginx:alpine
# 把构建好的文件放入 Nginx
COPY --from=builder /app/dist /usr/share/nginx/html
# 暴露 80 端口
EXPOSE 80
# 启动 Nginx
CMD ["nginx", "-g", "daemon off;"]
